<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardActivity">

    <EditText
        android:id="@+id/jo_id"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/jo_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="프로젝트 명"
        android:inputType="textPassword"



        app:layout_constraintEnd_toEndOf="@+id/jo_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jo_id"
        app:layout_constraintTop_toBottomOf="@+id/jo_id" />

    <EditText
        android:id="@+id/jo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/jo_pass"
        app:layout_constraintStart_toStartOf="@+id/jo_pass"
        app:layout_constraintTop_toBottomOf="@+id/jo_pass" />

    <EditText
        android:id="@+id/jo_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/jo_email"
        app:layout_constraintStart_toStartOf="@+id/jo_email"
        app:layout_constraintTop_toBottomOf="@+id/jo_email" />

    <Button
        android:id="@+id/jo_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="프로젝트 생성"
        app:backgroundTint="#6799FF"
        app:layout_constraintEnd_toEndOf="@+id/jo_number"
        app:layout_constraintStart_toStartOf="@+id/jo_number"
        app:layout_constraintTop_toBottomOf="@+id/jo_number" />

</androidx.constraintlayout.widget.ConstraintLayout>